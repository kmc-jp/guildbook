-# -*- coding: utf-8 -*-
%h2 アカウント新規作成
= form_for(@user) do |f|
  %div.container-fluid
    %div.row
      %div.col-sm-2.col-xs-12
        ログイン名
        %span.form-required *
      %div.col-sm-5.col-xs-6
        = f.text_field :uid, required: true, placeholder: 'combat', pattern: '^[a-z][a-z0-9]{2,7}$', class: 'form-control'
    %div.row
      %div.col-sm-2.col-xs-12
        氏名(ローマ字)
        %span.form-required *
      %div.col-sm-5.col-xs-6
        = f.text_field :sn, required: true, placeholder: 'Echizen', class: 'form-control'
      %div.col-sm-5.col-xs-6
        = f.text_field :gn, required: true, placeholder: 'Kosuke', class: 'form-control'
    %div.row
      %div.col-sm-2.col-xs-12
        パスワード
        %span.form-required *
      %div.col-sm-5.col-xs-6
        = f.text_field :raw_user_password, required: true, placeholder: 'Password', class: 'form-control'
      %div.col-sm-5.col-xs-6
        = f.text_field :raw_user_password_confirmation, required: true, placeholder: 'Password (確認)', class: 'form-control'
    %hr
    %fieldset.row
      %legend.col-sm-10.col-sm-offset-1.col-xs-12 管理者
      %div.col-sm-10.col-sm-offset-1.col-xs-12
        %div.form-inline
          %span.form-group
            %label.sr-only
              ログイン名
            = text_field_tag 'bind[uid]', @remote_user || @user.uid, placeholder: 'combat', class: 'form-control'
          %span.form-group
            %label.sr-only
              パスワード
            = password_field_tag 'bind[password]', '', placeholder: 'Password', class: 'form-control'
          = f.submit class: 'form-control btn btn-primary'
