- if err
  %p.alert.alert-danger
    = err

%form.edit-form{action: absolute_uri('!adduser/add'), method: :POST}
  %div.container-fluid
    %fieldset.row
      %legend.col-sm-10.col-sm-offset-1.col-xs-12
        新規作成するアカウント
      %div.col-sm-10.col-sm-offset-1.col-xs-12
        %div.form-inline
          %span.form-group
            %label.sr-only
              ログイン名
            %input.form-control{name: '$uid', value: '', placeholder: 'combat'}
          %span.form-group
            %label.sr-only
              パスワード
            %input.form-control{type: :password, name: '$password', placeholder: 'Password'}
    %div.row
      %div.col-sm-2.col-xs-12
        氏名(ローマ字表記)
        %span.form-required *
      %div.col-sm-5.col-xs-6
        %input.form-control{name: '$surname', value: '', required: true, placeholder: 'ECHIZEN'}
      %div.col-sm-5.col-xs-6
        %input.form-control{name: '$givenname', value: '', required: true, placeholder: 'Kosuke'}
    %hr
    %fieldset.row
      %legend.col-sm-10.col-sm-offset-1.col-xs-12
        管理者
      %div.col-sm-10.col-sm-offset-1.col-xs-12
        %div.form-inline
          %span.form-group
            %label.sr-only
              ログイン名
            %input.form-control{name: '$bind_uid', value: remote_user, placeholder: 'administrator'}
          %span.form-group
            %label.sr-only
              パスワード
            %input.form-control{type: :password, name: '$bind_password', placeholder: 'Password'}
          %input.form-control.btn.btn-primary{type: :submit, value: 'アカウント作成'}
